<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/tv_delivery_point"
        android:layout_width="139dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_common_button_active"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeMaxTextSize="17sp"
        app:autoSizeStepGranularity="1sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_delete_delivery_point"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/icon_cross"
        android:visibility="gone" /> <!-- 默认隐藏 -->

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bg_connection"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="137dp"
        android:visibility="gone"
        android:src="@drawable/point_connection" />
</RelativeLayout>
